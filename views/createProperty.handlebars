<main>
   <div class="ownerLinks">  
      <a href="/owners/properties-list" class="studentElement2">My Properties</a>
      <a href="/sign-out" class="studentElement2">Sign-out</a>
   </div>
   <form method="POST" id="createPropertyForm" action="/properties/createProperty" enctype="multipart/form-data">
      <div class="row mb-3">
         <label for="images" class="col-sm-2 col-form-label">
         Images:</label>
         <div class="col-sm-3"> 
            <input type="file" class="form-control" accept="image/*" id="images" name="images" multiple>
         </div>
      </div>
      <div class="row mb-3">
         <label for="address" class="col-sm-2 col-form-label">
         Address:</label>
         <div class="col-sm-3"> 
            <input type="text" class="form-control" id="address" name="address" placeholder="Enter address here">
         </div>
         <div id="no-address" class="div-text"  hidden>Please enter the address of the property</div>
      </div>
      <div class="row mb-3">
         <label for="description" class="col-sm-2 col-form-label">
         Description:</label>
         <div class="col-sm-3"> 
            <textarea id="description" class="form-control" cols="40" rows="2" name="description" placeholder="Enter Property description"></textarea>
         </div>
         <div id="no-description" class="div-text"  hidden>Please enter a description</div>
      </div>
      <div class="row mb-3">
         <label for="laundry" class="col-sm-2 col-form-label">Laundry:</label>
         <div class="col-sm-3">
            <select id="laundry" class="form-control" name="laundry">
                <option value="">Select Laundry Availability</option>
               <option value="Not-Included">Not-Included</option>
               <option value="In-Unit">In-Unit</option>
               <option value="Community">Community</option>
            </select>
         </div>
         <div id="no-laundry" class="div-text"  hidden>Please select at least one laundry option</div>
      </div>
      <div class="row mb-3">
         <label for="rent" class="col-sm-2 col-form-label">
         Rent:</label>
         <div class="col-sm-3"> 
            <input type="number" class="form-control" id="rent" name="rent" placeholder="Enter rent">
         </div>
         <div id="no-rent" class="div-text"  hidden>Please enter rent of the property</div>
      </div>
      <div class="row mb-3">
         <label for = "area" class="col-sm-2 col-form-label">
         Area:</label>
         <div class="col-sm-3"> 
            <input type="number" class="form-control" id = "area" name = "area" placeholder="Enter property area"> 
         </div>
         <div id="no-area" class="div-text"  hidden>Please enter sq. feet area of the property</div>
      </div>
      <div class="row mb-3">
         <label for = "bed" class="col-sm-2 col-form-label">
         Bedroom:</label>
         <div class="col-sm-3">
            <select id = "bed" class="form-control" name = "bed">
               <option value="">Select no of Bedrooms</option>
               <option value="1">1</option>
               <option value="2">2</option>
               <option value="3">3</option>
               <option value="4">4</option>
               <option value="5">5</option>
               <option value="6">6</option>
            </select>
         </div>
         <div id="no-bedroom" class="div-text"  hidden>Please select number of bedroom</div>
      </div>
      <div class="row mb-3">
         <label for = "bath" class="col-sm-2 col-form-label">
         Bathroom:</label>
         <div class="col-sm-3">
            <select id = "bath" class="form-control" name = "bath">
               <option value="">Select no of Bathrooms</option>
               <option value="1">1</option>
               <option value="2">2</option>
               <option value="3">3</option>
               <option value="4">4</option>
               <option value="5">5</option>
               <option value="6">6</option>
            </select>
         </div>
         <div id="no-bathroom" class="div-text"  hidden>Please select number of bathroom</div>
      </div>
      <div class="mb-3">
         <input type="submit" value="Create" class="btn btn-primary">
         <a href="/owners/properties-list"><input type="button" value="Cancel" class="btn btn-danger" aria-label="Cancel"></a>
      </div>
   </form>
</main>
<script src="/public/autoComplete.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD8FReQh61YLuQP68YvmQveuU7dY3LVC9w&libraries=places&callback=initAutoComplete" async defer></script>
